<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Button Generator" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" x:Name="spButtons" Margin="0,0,0,262" Grid.RowSpan="2">
            <Button x:Name="btnRead" Content="Read List" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="btnRead_Click" />
            <Button x:Name="btnWrite" Content="Write to XML" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="btnWrite_Click"/>
            <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="btnClose_Click"/>
            <CheckBox x:Name="chkShorten" Content="Shorten" Margin="0,0,0,36" Width="195" Checked="CheckBox_Checked" />
        </StackPanel>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Stretch"  Grid.Row="1" TextWrapping="Wrap" Text="Button Maker:" />

    </Grid>
</Window>
